{% extends 'base.html.twig' %}

{% block title %}Login | {{ parent() }} {% endblock %}

{% block body %}
    {% include 'sidebar/sidebar.html.twig' %}
    <div class="login">
        <form class="login__form" method="post">

            <h1 class="login__title">Log in with your account</h1>

            <div class="login__group">
                <input class="login__input" type="email" placeholder="E-mail address" value="{{ last_username }}" name="email" id="username" autocomplete="email" autofocus>
            </div>

            <div class="login__group">
                <input class="login__input" type="password" placeholder="Password" name="password" id="password" autocomplete="current-password">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>

            <button class="login__button" type="submit">Sign in</button>
            {% if error %}
                <div class="login__error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        </form>
    </div>
{% endblock %}
