{% extends 'base.html.twig' %}

{% block body %}
    {% include 'sidebar/sidebar.html.twig' %}

    <!-- Search input -->
        <form class="search">
            <input type="text" placeholder="Search" class="search-form__input">
            <i class="search__icon bi bi-search"></i>
        </form>

        <!-- Articles section -->
        <section class="articles__section">
            <!-- Article -->
            {% for article in articles %}
            <div class="article">
                <!-- Article Image -->
                <a href="{{ path('show_article', { slug: article.slug }) }}">
                    <div class="article__image">
                        <img src="{{ article.image }}" alt="">
                    </div>
                </a>
                <!-- Article Content -->
                <div class="article__content">
                    <span class="article__tag">{{ article.category.name }}</span>
                    <a href="{{ path('show_article', { slug: article.slug }) }}">
                    <h1 class="article__title">{{ article.title }}</h1>
                    </a>
                    <p>
                        {{ article.content }}
                    </p>
                </div>
            </div>
            {% endfor %}
        </section>
        <!-- Load more button -->
        <div>
            <button class="articles__load-more">LOAD MORE</button>
        </div>
{% endblock %}